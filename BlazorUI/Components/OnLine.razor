@namespace BlazorUI
@inherits LzComponentBasePassViewModel<IInternetConnectivitySvc> 
@if(ViewModel != null)
{
    @if (ViewModel.IsOnline)
        {
            <MudIcon Icon="@Icons.Material.Filled.Wifi" Color="Color.Success" Size="Size.Small" />
        }
        else
        {
            <MudIcon Icon="@Icons.Material.Filled.WifiOff" Color="Color.Success" Size="Size.Small"/>
        }
}

@code {


protected override async Task OnInitializedAsync()
    {
        if(ViewModel != null)
            await base.OnInitializedAsync();
    }   
}
